<h1>Edit Job Post</h1>
{{#post}}
<form class="" action="/posts/update/{{Id}}" method="post">
    <input type="hidden" name="id" value="{{Id}}">
    <div class="row">
        <div class="six columns">
            <label for="heading">Post</label>
            <input type="text" name="post" value = "{{Post}}">
            <label for="description">Description</label>
            <textarea name="description" class="u-full-width" id= "desc">{{Description}}</textarea>
        </div>
        <div class="six columns">

        </div>
    </div>
    <input class="button-primary" type="submit" value="Submit">

</form>
{{/post}}